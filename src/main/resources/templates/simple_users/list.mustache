{{>layout/header}}
<div class="col-md-12">
    <!-- 로그인 기능 영역 -->
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            {{#sessionUserName}}
                Looged in as : <span id="user">{{sessionUserName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{#sessionRoleAdmin}}
                    <a href="/simple_users/list" class="btn btn-secondary active" role="button">
                        회원관리
                    </a>
                {{/sessionRoleAdmin}}
                {{^sessionRoleAdmin}}
                    {{#sessionUserId}}
                        <a href="/mypage/mypage/{{sessionUserId}}" class="btn btn-secondary active" role="button">
                            마이페이지
                        </a>
                    {{/sessionUserId}}
                {{/sessionRoleAdmin}}
            {{/sessionUserName}}
            {{^sessionUserName}}
                <a href="/oauth2/authorization/naver" class="btn btn-success active" role="button">
                    Naver Login
                </a>
                <a href="/login" class="btn btn-warning active" role="button">
                    회원로그인
                </a>
                <a href="/signup" class="btn btn-secondary active" role="button">
                    회원가입
                </a>
            {{/sessionUserName}}
        </div>
    </div>
</div>
<br>
<h2>회원 리스트</h2>
<!-- 목록 출력 영역 -->
<table class="table table-horizontal table-bordered">
    <thead class="thead-string">
    <tr>
        <th>회원아이디</th>
        <th>회원권한</th>
        <th>로그인가능</th>
        <th>최종수정일</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#simpleUsers}}
        <tr>
            <td><a href="/simple_users/update/{{id}}">{{username}}</a></td>
            <td>{{role}}</td>
            <td>{{enabled}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
    {{/simpleUsers}}
    </tbody>
</table>
{{>layout/footer}}