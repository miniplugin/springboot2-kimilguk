{{>layout/header}}
<h2>회원 등록</h2>
<div class="col-md-12">
    <div class="col-md-4">
        <form name="form_save" action="/simple_users/save" method="post">
            <div class="form-group">
                <label for="title">회원ID</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="아이디를 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">암호</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="암호를 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">회원권한</label>
                <select name="role" id="role" class="form-control">
                    <option value="USER">일반사용자</option>
                    <option value="ADMIN">관리자</option>
                </select>
                <!--<input type="text" class="form-control" name="role" id="role" placeholder="권한을 입력하세요">-->
            </div>
            <div class="form-group">
                <label for="author">로그인가능</label><br>
                <input type="radio" name="enabled" value="true" checked>허용
                <input type="radio" name="enabled" value="false">금지
            </div>
            <a href="javascript:history.go(-1);" role="button" class="btn btn-secondary">취소</a>
            <button type="submit" class="btn btn-primary" id="btn-member-save">등록</button>
        </form>
    </div>
</div>
{{>layout/footer}}